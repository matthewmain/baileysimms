<%= form_for(@comment) do |f| %>

  <%= render 'shared/error_messages', object: f.object %>

  <div class="field">
    <%= f.text_area :content, placeholder: "Make a comment..." %>
    <%= f.hidden_field :post_id, value: @post_id %>
    <%= f.hidden_field :date, value: Time.now %>
  </div>

  <%= f.submit "Post", class: "comment_button" %>

<% end %>