<% if @user.errors.any? %>
	<div id ="error_explanation">
 		<div class="alert alert-danger">
 			Oops! Looks like you have <%= pluralize(@user.errors.count, "error") %>:
 		</div>
 		<ul>
 		<% @user.errors.full_messages.each do |msg| %>
 			<li><%= msg %></li>
		<% end %>
		</ul>
		 <div class="alert alert-danger">
 			Fix them and try again.
 		</div>
	</div>
<% end %>

