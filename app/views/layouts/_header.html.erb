

<div class="header_div">

  <div class="header_left">
    <div id="logo_div"><%= link_to image_tag('header_logo.png'), root_path %></div>
    <div id="list_div">

      <div id="reading_div">
        <div class="item_div" id="read_div">
          <p <%="class=current" if params[:controller] == "posts"%> ><%= link_to 'Read', current_reading_location %></p>
        </div>
        <div class="item_div" id="currently_reading_div">
        <div id="point"></div>
          <div id="mask">
            <a href=<%=current_reading_location%>>
              <% if current_reading_post_title =~ /DEAD IN BED/ %>
                <%= image_tag(cover_image_of(current_reading_post_title), alt: "Part #{current_reading_post_title.split('')[18]} Cover", class: "post_image", id: "post_cover") %>
              <% else %>
                <%= image_tag("Bailey Simms pic.jpg", alt: "Bailey Simms", class: "post_image", id: "post_portrait") %>
              <% end %>
              <div id="labels_div">
                <p id="continue_label"><%= params[:controller] == "posts" ? "Currently reading" : "Continue reading"%></p>
                <p id="current_reading_title"><%=current_reading_post_title%></p>
              </div>
            </a>
            <%= image_tag("posts menu icon.svg", id: "posts_menu_icon") %>
          </div>
        </div>
      </div>
      <div id="last_items_div">
        <div class="item_div" id="shop_div">
          <p <%="class=current" if params[:controller] == "books"%> ><%= link_to 'Shop', books_path %></p>
        </div>
        <div class="item_div" id="community_div">
          <p <%="class=current" if params[:controller] == "users"%> ><%= link_to 'Community', users_path %></p>
        </div>
        <div class="item_div" id="about_div">
          <p <%="class=current" if params[:controller] == "about"%> ><%= link_to 'About', about_path %></p>
        </div>
      </div>
    </div> 
  </div>  

  <div class=header_right>
    <%= user_image_for current_user %>
    <%= image_tag('profile menu icon.svg', class: "profile_menu_icon") %>
  </div>


