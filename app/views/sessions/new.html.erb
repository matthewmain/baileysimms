<head>
  <title>Dead in Bed | Log In</title>  
</head>

<div id="form_container" class="short_form_container">

	<div class="form_header_div">
		<h1 class="form_header_left">Log In</h1>
		<p class="form_header_right">Not a member? <u><%= link_to "Sign Up", new_user_path %></u>.</p>
	</div>

	<div class="form_div">
		<%= form_for(:session, url: login_path) do |f| %>

			<%= f.email_field :email, placeholder: "Email", class: "form_field" %>

			<%= f.password_field :password, placeholder: "Password", class: "form_field" %>		

			<div class="form_bottom_div">
				<label class="remember_label" for="session_remember_me">
					<input name="session[remember_me]" type="hidden" value="0">
					<input class="remember_checkbox" type="checkbox" value="1" checked="checked" name="session[remember_me]" id="session_remember_me">
					<span class="remember_checkmark"></span>
					remember me
				</label>
				<%= link_to "forgot your password?", new_password_reset_path, class: "forgot_password" %>
			</div>

			<%= f.submit "LOG IN", class: "form_button_primary" %>

		<% end %>

			
	</div>
	
</div>

