<div id="login-form">
	<%= form_for(:session, url: login_path) do |f| %>

		<%= f.label :email %>
		<%= f.email_field :email %>

		<%= f.label :password %>
		<%= f.password_field :password %>		

		<%= f.check_box :remember_me, checked: true, id: "login-remember-me-checkbox" %>
		<%= f.label :remember_me, "Remember me on this computer", id: "login-remember-me-label" %>

		<%= f.submit "LOG IN", id: "login-button" %>

	<% end %>

	<div id="login-new-user">
		<p>Not a member?</p>
		<p><%= link_to "SIGN UP", new_user_path %></p>
	</div>

</div>