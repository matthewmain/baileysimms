
<h2>Top Contributors</h2>
<h5><%=User.facebook_share_count%> total shares</h5>

<ol id="top_contributors_list">
  <% rank = 0 %>
  <% @top_ten_contributors_all_time.each do |name, participation| %>
    <% if participation[:shares] > 0 || participation[:comments] > 0 %>
      <% rank += 1%>
      <li>
        <div class="rank_div">#<%=rank%></div>
        <div class="upper_div_right">
          <%= user_image_for User.find_by_user_name(name)%>
          <div class="contributor_name"><%= link_to name.gsub(/_/, ' '), User.find_by_user_name(name) %></div>
          <div class="share_count"><%= participation[:shares] %><% if participation[:shares] == 1 %> share<% else %> shares<% end %></div> 
        </div>
        <div class="comment_count_div"><%= participation[:comments]%><%= " comment".pluralize(participation[:comments]) %></div>
      </li>
    <% end %>  
  <% end %>
</ol>
