<h3 class="top_contributors_heading"><i>TOP CONTRIBUTORS LAST MONTH</i></h3>
<h4 class="top_contributors_heading"><%= 1.month.ago.strftime("%^B %Y") %></h4>
<ol id="top_contributors_list">
  <% rank = 0 %>
  <% @top_five_contributors_last_month.each do |commenter, count| %>
    <% if count > 0 %>
      <% rank += 1%>
      <li>
        <div class="rank">#<%=rank%></div>
        <%= user_image_for User.find_by_user_name(commenter)%>
        <div class="contributor_name"><%= link_to commenter.gsub(/_/, ' '), User.find_by_user_name(commenter) %></div>
        <%= image_tag("DiBC1 cover.jpg", alt: "Dead In Bed 1", class: "winner") if rank == 1%>
        <div class="comment_count"><% if count > 1 %>comments<% else %>comment<% end %></div> 
        <div class="number"><%= count %></div>
        <div class="word_count"><%= total_words_commented_last_month(commenter) %></div>
      </li>
    <% end %>
  <% end %>
</ol>