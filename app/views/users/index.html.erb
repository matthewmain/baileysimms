<head>
  <title>Bailey Simms | Community</title>  
</head>

<body>

<h1>Community</h1>

<ul id="users_index">
  <% @users.each do |user| %>
    <li>
      <%= gravatar_for user%>
      <p class="users_index_user_name"><%= link_to user.user_name.gsub(/_/, ' '), user %></p>
      <p class="users_index_date">Member since <%= user.created_at.strftime("%B #{user.created_at.day.ordinalize}, %Y") %>
        <% if current_user.admin? && !current_user?(user) %>
        	<span>|</span><%= link_to " delete", user, method: :delete, data: { confirm: "You sure you want to do this?" }%>
    		<% end %></p>
    </li>
  <% end %>
</ul>

<%= will_paginate %>
<p class="pagination"><%= page_entries_info @users %></p>

</body>

