  
  <script>

    // FB.ui Shares
    (function() {
      var e = document.createElement('script'); e.async = true;
      e.src = document.location.protocol + '//connect.facebook.net/en_US/all.js';
      document.getElementById('fb-root').appendChild(e);
    }());


    $(document).ready(function(){


      //button for sharing the website generally 

      $('.facebook_share_website').click(function(){
      FB.ui({
        method: 'feed',
        name: "You've never, ever read anything like this.", 
        description: "An abandoned blog written by a teen under the name “Bailey Simms” was recently discovered. The author's whereabouts are now unknown. Her blog, however, has been preserved here in full. None of the original material has been altered. The contents are disturbing.",
        link: 'https://baileysimms.herokuapp.com/',
        
        }, function(response){

          if (response && !response.error_message) {
            $.ajax({
              url : "/log_shares",
              method : "PATCH",
              data : { shared: "website",
                       unlocked_segment: nil, 
                       current_part: nil,
                       current_post: nil, }
            });
            alert("Thanks for sharing!");
          } else {
            alert("Sorry. Looks like your share didn't go through.");
          }

        });
      });


    });

</script>  

