<html>

  <head>
    <title>Bailey Simms</title>

      <meta property="og:url"           content="https://baileysimms.herokuapp.com/" />
      <meta property="og:type"          content="website" />
      <meta property="og:title"         content="DEAD IN BED" />
      <meta property="og:description"   content="You've never, ever read a book like this..." />
      <meta property="og:image"         content="https://baileysimms.herokuapp.com/assets/DiBC1%20cover-a949ab4c986933484c20ffe406d172d6d508cabd7f40dc06de0ce036d3865bcc.jpg" />
  
  </head>

  <body id="home_body">
    <div id="home_wrapper">

      <div id="home_feature_image">
        <%= image_tag("author-name-with-feather.png", alt: "Baily Simms", id: "home_name_with_feather_image") %>
      </div>

      <div id="home_index_nav">
        <ul>
          <li id="li-blog"><%= link_to 'THE ORIGINAL BLOG', posts_path, class: "highlight" %></li>
          <li id="li-community"><%= link_to 'COMMUNITY', users_path %></li>
          <li id="li-books"><%= link_to 'BOOKS', books_path %></li>
          <li id="li-about"><%= link_to 'ABOUT', about_path %></li>
          <li id="li-contact"><%= mail_to'baileysimms96@yahoo.com', 'CONTACT' %></li>
          <% if logged_in? %>
            <li id="li-profile"><%= link_to 'PROFILE', current_user %></li>
            <li id="li-logout"><%= link_to 'LOG OUT', logout_path, method: "delete" %></li>
          <% else %>
            <li id="li-signup"><%= link_to 'SIGN UP', new_user_path %></li>
            <span>/</span>
            <li id="li-login"><%= link_to 'LOG IN', login_path %></li>  
          <% end %>
        </ul>
      </div>  

    </div>
  </body>

</html>

