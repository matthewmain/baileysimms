<head>
  <title>Dead in Bed | Read | <%=@post.date.strftime("%-m/%-e/%y %l:%M%p") %></title> 

    <% content_for :head do %>
    <!-- Facebook share open graph markup -->
    <meta property="fb:app_id"        content=<%=ENV['FACEBOOK_APP_ID']%> />
    <meta property="og:url"           content="https://baileysimms.herokuapp.com/posts/<%=@post.id%>," />
    <meta property="og:type"          content="Part <%=@post.book_part%>" />
    <meta property="og:title"         content="You've never, ever read anything like this." />
    <meta property="og:description"   content="An abandoned blog hosted by a teen under the name “Bailey Simms” was recently discovered. The author's whereabouts are now unknown. Her blog, however, has been preserved here in full. None of the original material has been altered. The contents are disturbing." />
    <meta property="og:image"         content="https://baileysimms.herokuapp.com/assets/facebook/DiB#{@post.book_part}_fb_share.jpg" />
  <% end %>

</head>

<%= render 'facebook_share' %>

<%= render 'blog_page_layout' %>

<% current_user.update_attribute(:current_post, @post.id) if logged_in? %>