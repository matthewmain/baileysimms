<head>
  <title>Bailey Simms | <%=@post.title%> | Edit</title>  
</head>


<div id="post_edit_container">

	<h1 id="post_title">Edit Post</h1>

	<div class="form" id="post_form">
		<%= form_for(@post) do |f| %>

		  <%= render 'shared/error_messages', object: f.object %>	
			
			<%= f.label :title, "Title: " %><br>
			<%= f.text_field :title %><br>

			<%= f.label :date, "Date: " %><br>
			<%= f.datetime_field :date, value: @post.date.strftime("%A, %B #{@post.date.day.ordinalize}, %Y. %l:%M %P.") %><br>
				
			<%= f.label :content, "Content: " %><br>
			<%= f.text_area :content %><br>

			<div class="checkboxes">
				<%= f.check_box :visible_to_public %>
				<%= f.label :visible_to_public, "VISIBLE TO PUBLIC" %>
				<br>
				<%= f.check_box :visible_to_users %>
				<%= f.label :visible_to_users, "VISIBLE TO USERS" %>
			</div>

		  <%= f.submit "SAVE CHANGES", class: "form-button" %>

		<% end %>	
	</div>

</div>
