  
  <script>

    // FB.ui Share Button
    (function() {
      var e = document.createElement('script'); e.async = true;
      e.src = document.location.protocol + '//connect.facebook.net/en_US/all.js';
      document.getElementById('fb-root').appendChild(e);
    }());

    $(document).ready(function(){
      $('.facebook_share_button').click(function(){
      FB.ui({
        method: 'feed',
        href: 'https://baileysimms.herokuapp.com/',

        title: 'DEAD IN BED, Part <%=@post.book_part%>: <%=Part.find_by_part_number(@post.book_part).title%>',
        description: "You've never, ever read anything like this. An abandoned blog hosted by a teen under the name “Bailey Simms” was recently discovered. Her wherabouts are now unknown. None of the original material has been altered. The contents are disturbing.",
        picture: 'https://baileysimms.herokuapp.com/assets/facebook/DiB<%=@post.book_part%>_fb_share.jpg',

        }, function(response){
          if (response && !response.error_message) {
            $.ajax({
              url : "/log_shares",
              method : "PATCH",
              data : { share_status: 'shared' }
            });
            alert("Thanks for sharing!");
          } else {
            alert("Looks like your share didn't go through.");
          }
        });
      });
    });

  </script>  