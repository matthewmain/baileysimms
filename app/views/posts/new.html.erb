<head>
  <title>Bailey Simms | New Post</title>  
</head>

<h1 id="post_title">New Post</h1>

<div class="form" id="post_form">
	<%= form_for(@post) do |f| %>

		<%= render 'shared/error_messages', object: f.object %>	
		
		<%= f.label :title, "Title: " %><br>
		<%= f.text_field :title, autofocus: true %><br>
		
		<%= f.label :date, "Date: " %><br> 
		<%= f.datetime_field :date, placeholder: 'mon day year hour:minute a/pm' %><br>
			
		<%= f.label :content, "Content: " %><br>
		<%= f.text_area :content, placeholder: '<div id="blog/novel_text"></div>'  %><br>
					
		<%= f.submit "ADD POST", class: "form-button" %>
		
	<% end %>
</div>